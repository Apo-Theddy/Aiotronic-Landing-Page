---
const { label, description, img } = Astro.props;
---

<article
  class="col-span-1 border border-[#536DFF] rounded-lg bg-[#050F1E] justify-center p-10"
>
  <div class="flex flex-wrap items-center gap-3 mb-2 justify-center">
    <p class="text-xl font-medium text-center">{label}</p>
    <img src={img.src} alt={img.name} width="40" />
  </div>
  <p class="text-center">{description}</p>
</article>
